<?xml version="1.0" encoding="utf-8"?>
<!-- Logo designed by Naveen -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_password_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerCyan">

    <!-- Progress Dialog -->
    <LinearLayout
        android:id="@+id/forgotPasswordProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="1dp"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>

    <!-- Container for header, image, text fields, and button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header TextView -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_password"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/amaranth"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp" />

        <!-- ImageView for the fridge icon -->
        <ImageView
            android:id="@+id/imgForgotLogo"
            android:layout_width="96dp"
            android:layout_height="71dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/image_view"
            android:src="@drawable/refrigerator_svgrepo_com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerText" />

        <!-- Text for instructions -->
        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_otp_received_below"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/imgForgotLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <!-- OTP input field -->
        <EditText
            android:id="@+id/etOTP"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_border_for_view"
            android:drawableStart="@drawable/ic_icon_mobile"
            android:drawablePadding="4dp"
            android:hint="@string/otp_4_characters"
            android:inputType="number|text"
            android:maxLength="4"
            android:maxLines="1"
            android:padding="14dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/txtForgotPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:autofillHints="@string/otp_4_characters" />

        <!-- New Password input field -->
        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_border_for_view"
            android:drawableStart="@drawable/ic_icon_password"
            android:drawablePadding="4dp"
            android:hint="@string/new_password_min_4_digits"
            android:inputType="number|numberPassword"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="14dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/etOTP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:autofillHints="@string/new_password_min_4_digits" />

        <!-- Confirm Password input field -->
        <EditText
            android:id="@+id/etConfirmForgotPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_border_for_view"
            android:drawableStart="@drawable/ic_icon_password"
            android:drawablePadding="4dp"
            android:hint="@string/confirm_password"
            android:inputType="number|numberPassword"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="14dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/etNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:autofillHints="@string/confirm_password" />

        <!-- Submit button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fridgeColor"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/etConfirmForgotPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
